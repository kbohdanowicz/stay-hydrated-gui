{
  "name": "stay-hydrated",
  "productName": "Stay Hydrated",
  "version": "1.0.1",
  "description": "My Electron application description",
  "repository": "github:kbohdanowicz/Stay-Hydrated",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron-forge start",
    "make-dev": "python prepareForProd.py && tsc && electron-forge make --targets @electron-forge/maker-wix",
    "make-prod": "tsc && electron-forge make --targets @electron-forge/maker-wix",
    "package": "tsc && electron-forge package",
    "publish": "tsc && electron-forge publish --targets @electron-forge/maker-wix",
    "test-prepare-for-prod": "python prepareForProd.py",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Krzysztof Bohdanowicz"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./resources/images/water-drop.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "name": "Stay Hydrated",
            "manufacturer": "Krzysztof Bohdanowicz",
            "description": "An app that reminds you to drink water",
            "exe": "Stay Hydrated",
            "version": "1.0.0",
            "appIconPath": "./resources/images/water-drop.ico",
            "ui": {
              "chooseDirectory": true
            },
            "features": {
              "autoLaunch": true,
              "autoUpdate": false
            }
          }
        }
      ]
    },
    "publishers": [
      {
        "name": "@electron-forge/publisher-github",
        "config": {
          "repository": {
            "owner": "kbohdanowicz",
            "name": "Stay-Hydrated"
          }
        }
      }
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-wix": "^6.0.0-beta.56",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.56",
    "@types/electron": "^1.6.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "electron": "^12.0.2",
    "electron-wix-msi": "^3.2.0",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.22.1",
    "sass": "^1.32.12",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "audio-loader": "^1.0.3",
    "audio-play": "^2.3.1",
    "bourbon": "^7.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-unhandled": "^3.0.2",
    "update-electron-app": "^2.0.1"
  }
}
